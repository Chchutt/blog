    "deploy": "gh-pages -d build",
    "lint": "eslint --debug src/components/",
    "lint:fix": "eslint --debug src/components/ --fix",
    "format": "prettier --write src/components/**/*.js",
    "pre-commit": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
